# vim: noexpandtab filetype=gitconfig
[advice]
	detachedHead = false
	forceDeleteBranch = false
	skippedCherryPicks = false
[alias]
	autosquash = -c sequence.editor=true rebase --interactive
	difft = -c diff.external=difft diff
	log-no-tags = log --decorate-refs-exclude=refs/tags
	pushf = push --force-with-lease
	remotes = remote --verbose
	root = rev-parse --show-toplevel
	whoami = config --get user.email
	worktrees = worktree list
[branch]
	sort = -committerdate
[commit]
	gpgSign = true
	verbose = true
[color]
	diff = always
	pager = false
[core]
	editor = /usr/bin/vim
	pager = /usr/bin/less
[diff]
	algorithm = histogram
	colorMoved = zebra
	colorMovedWS = allow-indentation-change
	mnemonicPrefix = true
[fetch]
	fsckObjects = true
	prune = true
	pruneTags = true
[gpg]
	format = ssh
[help]
	autoCorrect = 1
[init]
	defaultBranch = main
[log]
	date = iso8601-local
	decorate = full
[merge]
	conflictStyle = zdiff3
	ff = only
[pager]
	status = true
[pull]
	ff = only
	rebase = true
[push]
	autoSetupRemote = true
	default = current
[rebase]
	autoSquash = true
	autoStash = true
	stat = true
	updateRefs = true
[receive]
	fsckObjects = true
[rerere]
	enabled = true
[status]
	showStash = true
	showUntrackedFiles = all
[transfer]
	fsckObjects = true
[url "git@github.com:"]
	pushInsteadOf = https://github.com/
[user]
	name = matijs
	useConfigOnly = true
[includeIf "gitdir:~/.dotfiles"]
	path = ./include.d/dotfiles
[include]
	path = ./keys
