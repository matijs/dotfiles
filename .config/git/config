	editor = /usr/bin/vim
	pager = /usr/bin/less
[diff]
	colorMoved = zebra
	colorMovedWS = allow-indentation-change
[fetch]
	prune = true
	pruneTags = true
[help]
	autoCorrect = 1
[init]
	defaultBranch = main
[merge]
	ff = only
	conflictstyle = diff3
[pull]
	rebase = true
[push]
	default = current
[rebase]
	autoStash = true
	autoSquash = true
[rerere]
	enabled = true
[status]
	showStash = true
	showUntrackedFiles = all
[user]
	useConfigOnly = true
